{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "On-Screen Text & OCR Metadata",
  "type": "object",
  "properties": {
    "texts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string"
          },
          "detected_text": {
            "type": "string"
          },
          "context": {
            "type": "string"
          },
          "confidence": {
            "type": "number"
          }
        },
        "required": [
          "timestamp",
          "detected_text"
        ]
      }
    }
  }
}