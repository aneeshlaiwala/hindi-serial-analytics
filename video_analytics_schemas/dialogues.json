{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dialogue Transcript",
  "type": "object",
  "properties": {
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string"
          },
          "speaker": {
            "type": "string"
          },
          "dialogue": {
            "type": "string"
          },
          "emotion": {
            "type": "string"
          },
          "language": {
            "type": "string"
          }
        },
        "required": [
          "timestamp",
          "speaker",
          "dialogue"
        ]
      }
    }
  }
}