{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Costume and Attire Metadata",
  "type": "object",
  "properties": {
    "appearances": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string"
          },
          "character": {
            "type": "string"
          },
          "attire": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "context": {
            "type": "string"
          }
        },
        "required": [
          "timestamp",
          "character",
          "attire"
        ]
      }
    }
  }
}