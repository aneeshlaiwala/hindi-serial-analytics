{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ad Break Metadata",
  "type": "object",
  "properties": {
    "breaks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "break_number": {
            "type": "integer"
          },
          "start_time": {
            "type": "string"
          },
          "end_time": {
            "type": "string"
          },
          "duration_seconds": {
            "type": "integer"
          },
          "ads": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "break_number",
          "start_time",
          "end_time"
        ]
      }
    }
  }
}